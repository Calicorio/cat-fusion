  "economy": {
    "currency_formula": {
      "description": "Currency per tick = base_rate * (level ^ rate_exponent)",
      "rate_exponent": 1.5,
      "tick_interval_formula": "max(1.0, 5.0 / sqrt(level))"
    },
    "spawn_settings": {
      "base_spawn_time": 20.0,
      "spawn_time_growth": 1.15,
      "max_spawn_time": 300.0,
      "max_cats_on_screen": 10,
      "formula": "min(base * (growth ^ cats_spawned_total * 0.05), max_spawn_time)"
    },
    "fusion_rewards": {
      "bonus_formula": "hourly_production * bonus_percentage",
      "bonus_percentage_by_tier": {
        "kitten": 0.05,
        "house": 0.08,
        "fancy": 0.12,
        "mystical": 0.18,
        "legendary": 0.25,
        "cosmic": 0.35
      }
    },
    "offline_earnings": {
      "multiplier": 0.5,
      "max_offline_hours": 24,
      "description": "Players earn 50% of online rate while offline, capped at 24 hours"
    }
  },

