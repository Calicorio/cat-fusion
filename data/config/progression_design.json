{
  "meta": {
    "version": "1.0",
    "description": "CatFusion progression system design - 30 levels across 6 tiers"
  },

  "tiers": {
    "kitten": {
      "level_range": [1, 5],
      "description": "Basic cute kittens, small and simple",
      "size_multiplier": 1.0,
      "rarity_color": "#FFFFFF",
      "archetypes": ["tabby", "gray", "black", "white", "orange"],
      "behaviors": ["idle", "walk", "sit", "meow", "play"],
      "has_particles": false
    },
    "house": {
      "level_range": [6, 10],
      "description": "Adult domestic cats, more detailed",
      "size_multiplier": 1.3,
      "rarity_color": "#7FFF7F",
      "archetypes": ["shorthair", "longhair", "tuxedo", "calico", "siamese"],
      "behaviors": ["idle", "walk", "sit", "meow", "nap", "play"],
      "has_particles": false
    },
    "fancy": {
      "level_range": [11, 15],
      "description": "Purebred cats with accessories (bows, collars)",
      "size_multiplier": 1.5,
      "rarity_color": "#7F7FFF",
      "archetypes": ["persian", "maine_coon", "ragdoll", "bengal", "scottish_fold"],
      "behaviors": ["idle", "walk", "sit", "meow", "nap", "groom", "play"],
      "has_particles": false
    },
    "mystical": {
      "level_range": [16, 20],
      "description": "Magical cats with glowing effects and unusual colors",
      "size_multiplier": 1.8,
      "rarity_color": "#FF7FFF",
      "archetypes": ["spirit", "shadow", "crystal", "aurora", "celestial"],
      "behaviors": ["idle", "walk", "sit", "meow", "nap", "groom", "play", "magic"],
      "has_particles": true
    },
    "legendary": {
      "level_range": [21, 25],
      "description": "Legendary mythical cats with special effects",
      "size_multiplier": 2.2,
      "rarity_color": "#FFD700",
      "archetypes": ["phoenix", "dragon", "thunder", "frost", "void"],
      "behaviors": ["idle", "walk", "sit", "meow", "nap", "groom", "play", "magic", "special"],
      "has_particles": true
    },
    "cosmic": {
      "level_range": [26, 30],
      "description": "Universe-level cats, the ultimate evolution",
      "size_multiplier": 2.5,
      "rarity_color": "#FF00FF",
      "archetypes": ["nebula", "supernova", "blackhole", "quantum", "infinity"],
      "behaviors": ["idle", "walk", "sit", "meow", "nap", "groom", "play", "magic", "special", "cosmic"],
      "has_particles": true
    }
  },

